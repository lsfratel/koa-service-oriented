{
  "extends": [
    "airbnb-base"
  ],
  "plugins": ["jest"],
  "env": {
    "node": true,
    "es6": true,
    "browser": true,
    "jest/globals": true
  },
  "rules": {
    "no-console": "off",
    "global-require": "off",
    "no-plusplus": [
      "error",
      { "allowForLoopAfterthoughts": true }
    ],
    "radix": ["error", "as-needed"]
  }
}
